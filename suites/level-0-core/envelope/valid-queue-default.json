{
  "test_id": "L0-ENV-012",
  "level": 0,
  "category": "envelope",
  "name": "valid-queue-default",
  "description": "Enqueue a job without specifying a queue. The server MUST default the queue to 'default' as specified in the core spec. Verify the response contains queue='default'.",
  "spec_ref": "ojs-core#section-5.1, L0-ENV-004",
  "tags": [
    "level-0",
    "envelope",
    "queue",
    "default-value",
    "happy-path"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "email.send",
        "args": [
          "user@example.com",
          "welcome"
        ]
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.type": "email.send",
          "$.job.queue": "default",
          "$.job.state": "available",
          "$.job.attempt": 0,
          "$.job.created_at": "string:datetime"
        }
      }
    }
  ]
}
