{
  "test_id": "L0-EVT-002",
  "level": 0,
  "category": "events",
  "name": "event-job-completed",
  "description": "When a job is successfully completed, the server SHOULD emit a 'job.completed' event. The event MUST include job_type, queue, duration_ms, and attempt in the event data.",
  "spec_ref": "ojs-events#section-3.1",
  "tags": ["level-0", "events", "job-completed"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": { "Content-Type": "application/openjobspec+json" },
      "body": {
        "type": "test.echo",
        "args": [{"message": "completed-event-test"}],
        "options": { "queue": "conformance-events-complete" }
      },
      "assertions": {
        "status": 201,
        "body": { "$.job.id": { "$exists": true } }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": { "Content-Type": "application/openjobspec+json" },
      "body": {
        "queues": ["conformance-events-complete"],
        "worker_id": "worker-event-1"
      },
      "assertions": {
        "status": 200,
        "body": { "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}" }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "ack",
      "path": "/ojs/v1/workers/ack",
      "headers": { "Content-Type": "application/openjobspec+json" },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "result": {"status": "ok"}
      },
      "assertions": {
        "status": 200,
        "body": { "$.state": "completed" }
      }
    },
    {
      "id": "step-4",
      "delay_ms": 500,
      "action": "GET",
      "intent": "list-events",
      "path": "/ojs/v1/events?types=job.completed&queues=conformance-events-complete&limit=10",
      "headers": { "Accept": "application/openjobspec+json" },
      "assertions": {
        "status": 200,
        "body": {
          "$.events": "array:min_length:1",
          "$.events[0].type": "job.completed",
          "$.events[0].data.job_type": "test.echo",
          "$.events[0].data.queue": "conformance-events-complete",
          "$.events[0].data.attempt": { "$exists": true },
          "$.events[0].data.duration_ms": { "$exists": true }
        }
      }
    }
  ]
}
