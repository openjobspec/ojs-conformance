{
  "test_id": "L0-OPS-015",
  "level": 0,
  "category": "operations",
  "name": "cancel-available-job",
  "description": "PUSH a job, then CANCEL it while it is still in the 'available' state. Verify the server transitions the job to state=cancelled and returns the updated envelope.",
  "spec_ref": "ojs-core#section-7.6",
  "tags": [
    "level-0",
    "operations",
    "cancel",
    "available"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "type": "test.noop",
        "args": [
          {
            "action": "cancel-available-test"
          }
        ],
        "options": {
          "queue": "conformance-cancel-test"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": {
            "$exists": true
          },
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "DELETE",
      "intent": "cancel",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "cancelled",
          "$.job.cancelled_at": {
            "$exists": true,
            "$type": "string"
          }
        }
      }
    },
    {
      "id": "step-3",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "cancelled"
        }
      }
    }
  ]
}
