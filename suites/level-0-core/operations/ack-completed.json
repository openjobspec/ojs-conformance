{
  "test_id": "L0-OPS-009",
  "level": 0,
  "category": "operations",
  "name": "ack-completed",
  "description": "PUSH a job, FETCH it, then ACK with a result. Verify the server transitions the job to state=completed, stores the result, and sets completed_at.",
  "spec_ref": "ojs-core#section-7.3",
  "tags": ["level-0", "operations", "ack", "completed"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "type": "test.echo",
        "args": [{"message": "ack-completed-test"}],
        "options": {
          "queue": "conformance-ack-test"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": {"$exists": true},
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "queues": ["conformance-ack-test"],
        "worker_id": "test-worker-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].state": "active",
          "$.jobs[0].attempt": 1
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "path": "/ojs/v1/workers/ack",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "result": {
          "echoed": true,
          "message": "ack-completed-test"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.acknowledged": true,
          "$.job_id": "{{steps.step-1.response.body.job.id}}",
          "$.state": "completed",
          "$.completed_at": {"$exists": true, "$type": "string"}
        }
      }
    }
  ]
}
