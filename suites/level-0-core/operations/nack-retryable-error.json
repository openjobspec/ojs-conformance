{
  "test_id": "L0-OPS-013",
  "level": 0,
  "category": "operations",
  "name": "nack-retryable-error",
  "description": "PUSH a job with max_attempts=3, FETCH it, then FAIL. Since attempts remain (1 of 3 used), verify the job transitions to state=retryable and reports the next retry attempt.",
  "spec_ref": "ojs-core#section-7.4",
  "tags": [
    "level-0",
    "operations",
    "nack",
    "fail",
    "retryable"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "type": "test.fail_always",
        "args": [
          {
            "action": "nack-retryable-test"
          }
        ],
        "options": {
          "queue": "conformance-nack-retryable-test",
          "retry": {
            "max_attempts": 3,
            "initial_interval": "PT1S",
            "backoff_coefficient": 2.0
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": {
            "$exists": true
          },
          "$.job.state": "available",
          "$.job.max_attempts": 3
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "conformance-nack-retryable-test"
        ],
        "worker_id": "test-worker-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].state": "active",
          "$.jobs[0].attempt": 1
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "error": {
          "code": "handler_error",
          "message": "Transient network error: connection reset by peer",
          "retryable": true,
          "details": {
            "error_class": "NetworkError",
            "errno": "ECONNRESET"
          }
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job_id": "{{steps.step-1.response.body.job.id}}",
          "$.state": "retryable",
          "$.attempt": 1,
          "$.max_attempts": 3,
          "$.next_attempt_at": {
            "$exists": true,
            "$type": "string"
          }
        }
      }
    }
  ]
}
