{
  "test_id": "L0-OPS-020",
  "level": 0,
  "category": "operations",
  "name": "info-readonly",
  "description": "GET a job multiple times and verify the INFO operation is purely read-only with no side effects. The job state, attempt count, and all other fields MUST remain unchanged across repeated reads.",
  "spec_ref": "ojs-core#section-7.7",
  "tags": [
    "level-0",
    "operations",
    "info",
    "readonly",
    "idempotent"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "type": "test.noop",
        "args": [
          {
            "action": "info-readonly-test"
          }
        ],
        "meta": {
          "trace_id": "test-info-readonly-020"
        },
        "options": {
          "queue": "conformance-info-readonly-test"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": {
            "$exists": true
          },
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.type": "test.noop",
          "$.job.state": "available",
          "$.job.queue": "conformance-info-readonly-test",
          "$.job.attempt": 0,
          "$.job.args[0].action": "info-readonly-test",
          "$.job.meta.trace_id": "test-info-readonly-020",
          "$.job.created_at": {
            "$exists": true
          }
        }
      }
    },
    {
      "id": "step-3",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.type": "test.noop",
          "$.job.state": "available",
          "$.job.queue": "conformance-info-readonly-test",
          "$.job.attempt": 0,
          "$.job.args[0].action": "info-readonly-test",
          "$.job.meta.trace_id": "test-info-readonly-020",
          "$.job.created_at": {
            "$exists": true
          }
        }
      }
    },
    {
      "id": "step-4",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.type": "test.noop",
          "$.job.state": "available",
          "$.job.queue": "conformance-info-readonly-test",
          "$.job.attempt": 0,
          "$.job.args[0].action": "info-readonly-test",
          "$.job.meta.trace_id": "test-info-readonly-020",
          "$.job.created_at": {
            "$exists": true
          }
        }
      }
    },
    {
      "id": "step-5",
      "action": "ASSERT",
      "intent": "assert",
      "description": "Verify all three GET responses are identical, confirming no side effects.",
      "assertions": {
        "equality": {
          "$.steps.step-2.response.body": "{{steps.step-3.response.body}}",
          "$.steps.step-3.response.body": "{{steps.step-4.response.body}}"
        }
      }
    }
  ]
}
