{
  "test_id": "L0-LC-001",
  "level": 0,
  "category": "lifecycle",
  "name": "enqueue-sets-available",
  "description": "Enqueuing a job without scheduled_at (immediate job) MUST set its state to 'available'. The response MUST include a UUIDv7 id, attempt 0, created_at timestamp, and enqueued_at timestamp.",
  "spec_ref": "ojs-core#section-6.2",
  "tags": ["level-0", "lifecycle", "enqueue", "available"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "lifecycle.test.immediate",
        "args": [{"action": "verify_available_state"}],
        "options": {
          "queue": "default"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.type": "lifecycle.test.immediate",
          "$.job.state": "available",
          "$.job.queue": "default",
          "$.job.attempt": 0,
          "$.job.created_at": "string:datetime",
          "$.job.enqueued_at": "string:datetime",
          "$.job.args[0].action": "verify_available_state",
          "$.job.started_at": "absent",
          "$.job.completed_at": "absent"
        }
      }
    },
    {
      "id": "step-2",
      "action": "GET",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "available",
          "$.job.attempt": 0
        }
      }
    }
  ]
}
