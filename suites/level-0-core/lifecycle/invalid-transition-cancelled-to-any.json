{
  "test_id": "L0-LC-011",
  "level": 0,
  "category": "lifecycle",
  "name": "invalid-transition-cancelled-to-any",
  "description": "A job in the 'cancelled' terminal state MUST NOT accept any further state transitions. Attempting to FETCH, ACK, NACK, or CANCEL a cancelled job MUST be rejected. The job state MUST remain 'cancelled'.",
  "spec_ref": "ojs-core#section-6.2",
  "tags": ["level-0", "lifecycle", "invalid-transition", "terminal", "cancelled", "negative"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "lifecycle.test.cancelled_no_transition",
        "args": [{"action": "cancel_then_try_operations"}],
        "options": {
          "queue": "default"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "DELETE",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "cancelled"
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "path": "/ojs/v1/workers/ack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}"
      },
      "assertions": {
        "status": 409,
        "body": {
          "$.error.code": "string:nonempty",
          "$.error.message": "string:nonempty"
        }
      }
    },
    {
      "id": "step-4",
      "action": "POST",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "error": {
          "code": "handler_error",
          "message": "Attempted failure after cancellation"
        }
      },
      "assertions": {
        "status": 409,
        "body": {
          "$.error.code": "string:nonempty",
          "$.error.message": "string:nonempty"
        }
      }
    },
    {
      "id": "step-5",
      "action": "DELETE",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 409,
        "body": {
          "$.error.code": "string:nonempty",
          "$.error.message": "string:nonempty"
        }
      }
    },
    {
      "id": "step-6",
      "action": "GET",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "cancelled"
        }
      }
    }
  ]
}
