{
  "test_id": "L0-LC-012",
  "level": 0,
  "category": "lifecycle",
  "name": "invalid-transition-scheduled-to-active",
  "description": "A job in the 'scheduled' state MUST NOT be directly acknowledged or failed. The state machine requires scheduled -> available -> active. Attempting to ACK a scheduled job MUST be rejected.",
  "spec_ref": "ojs-core#section-6.2",
  "tags": ["level-0", "lifecycle", "invalid-transition", "scheduled", "negative"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "lifecycle.test.scheduled_no_ack",
        "args": [{"action": "should_not_ack_from_scheduled"}],
        "options": {
          "queue": "default",
          "delay_until": "2099-12-31T23:59:59Z"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "scheduled"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "path": "/ojs/v1/workers/ack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}"
      },
      "assertions": {
        "status": 409,
        "body": {
          "$.error.code": "string:nonempty",
          "$.error.message": "string:nonempty"
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "error": {
          "code": "handler_error",
          "message": "Attempted failure on scheduled job"
        }
      },
      "assertions": {
        "status": 409,
        "body": {
          "$.error.code": "string:nonempty",
          "$.error.message": "string:nonempty"
        }
      }
    },
    {
      "id": "step-4",
      "action": "GET",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "scheduled",
          "$.job.attempt": 0
        }
      }
    }
  ]
}
