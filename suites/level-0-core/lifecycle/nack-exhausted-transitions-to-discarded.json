{
  "test_id": "L0-LC-006",
  "level": 0,
  "category": "lifecycle",
  "name": "nack-exhausted-transitions-to-discarded",
  "description": "Failing (NACK) an active job that has exhausted all retry attempts MUST transition it to the 'discarded' terminal state. With max_attempts=1, the first (and only) attempt failure MUST discard the job.",
  "spec_ref": "ojs-core#section-6.2",
  "tags": [
    "level-0",
    "lifecycle",
    "nack",
    "discarded",
    "terminal",
    "retry-exhausted"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "lifecycle.test.nack_discard",
        "args": [
          {
            "action": "verify_discarded_state"
          }
        ],
        "options": {
          "queue": "default",
          "retry": {
            "max_attempts": 1
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "default"
        ]
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].state": "active",
          "$.jobs[0].attempt": 1
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "error": {
          "code": "handler_error",
          "message": "Permanent failure: all retries exhausted"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "discarded",
          "$.job.completed_at": "string:datetime"
        }
      }
    },
    {
      "id": "step-4",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "discarded",
          "$.job.attempt": 1,
          "$.job.completed_at": "string:datetime",
          "$.job.started_at": "string:datetime"
        }
      }
    }
  ]
}
