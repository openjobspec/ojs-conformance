{
  "test_id": "EXT-PRG-001",
  "level": 0,
  "category": "ext-progress",
  "name": "progress-report",
  "description": "Enqueue a job, fetch it to make it active, then PUT /ojs/v1/jobs/{id}/progress to report progress. Verify the server accepts the progress update and returns 200.",
  "spec_ref": "ojs-progress#section-3",
  "tags": ["extension", "progress", "report", "happy-path"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "type": "test.progress",
        "args": [
          {
            "action": "progress-report-test"
          }
        ],
        "options": {
          "queue": "conformance-progress-report"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": { "$exists": true },
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "queues": ["conformance-progress-report"],
        "worker_id": "test-worker-prg-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].state": "active"
        }
      }
    },
    {
      "id": "step-3",
      "action": "PUT",
      "intent": "progress",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}/progress",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "progress": 0.5,
        "message": "Processing halfway complete"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.progress": 0.5
        }
      }
    }
  ]
}
