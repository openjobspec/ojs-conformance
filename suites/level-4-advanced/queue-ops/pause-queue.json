{
  "test_id": "L4-PAUSE-001",
  "level": 4,
  "category": "queue-ops",
  "name": "pause-queue",
  "description": "Pausing a queue MUST prevent workers from fetching jobs from it. After pausing the queue, enqueuing a job, and attempting to FETCH, the result MUST be empty. After resuming the queue, the job MUST become fetchable again.",
  "spec_ref": "ojs-http-binding#section-7",
  "tags": ["level-4", "queue-ops", "pause", "resume", "delivery"],
  "steps": [
    {
      "id": "step-1",
      "description": "Pause the queue",
      "action": "POST",
      "path": "/ojs/v1/queues/pause-test/pause",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {},
      "assertions": {
        "status": 200,
        "body": {
          "$.queue.name": "pause-test",
          "$.queue.paused": true
        }
      }
    },
    {
      "id": "step-2",
      "description": "Enqueue a job on the paused queue",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "queueops.test.pause_job",
        "args": [{"action": "test_pause_behavior"}],
        "options": {
          "queue": "pause-test"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available",
          "$.job.queue": "pause-test"
        }
      }
    },
    {
      "id": "step-3",
      "description": "Attempt to fetch from the paused queue - should return nothing",
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["pause-test"],
        "worker_id": "worker-pause-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs": []
        }
      }
    },
    {
      "id": "step-4",
      "description": "Resume the queue",
      "action": "POST",
      "path": "/ojs/v1/queues/pause-test/resume",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {},
      "assertions": {
        "status": 200,
        "body": {
          "$.queue.name": "pause-test",
          "$.queue.paused": false
        }
      }
    },
    {
      "id": "step-5",
      "description": "Fetch from the resumed queue - should now return the job",
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["pause-test"],
        "worker_id": "worker-pause-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-2.response.body.job.id}}",
          "$.jobs[0].type": "queueops.test.pause_job",
          "$.jobs[0].state": "active"
        }
      }
    }
  ]
}