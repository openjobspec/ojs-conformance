{
  "test_id": "L4-UNIQ-003",
  "level": 4,
  "category": "unique",
  "name": "unique-replace-duplicate",
  "description": "A job enqueued with on_conflict='replace' MUST cancel the existing job and enqueue the new one when a duplicate is submitted. The original job MUST be cancelled and a new job with a new ID MUST be created.",
  "spec_ref": "ojs-unique-jobs#section-5",
  "tags": [
    "level-4",
    "unique",
    "replace",
    "conflict"
  ],
  "steps": [
    {
      "id": "step-1",
      "description": "Enqueue first job with unique constraint (on_conflict=replace)",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "unique.test.replace_duplicate",
        "args": [
          {
            "action": "generate_report",
            "version": 1
          }
        ],
        "options": {
          "queue": "unique-replace-test",
          "unique": {
            "keys": [
              "type"
            ],
            "on_conflict": "replace",
            "states": [
              "available",
              "active",
              "retryable",
              "scheduled"
            ]
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "description": "Enqueue duplicate with replace policy - should succeed and replace the original",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "unique.test.replace_duplicate",
        "args": [
          {
            "action": "generate_report",
            "version": 2
          }
        ],
        "options": {
          "queue": "unique-replace-test",
          "unique": {
            "keys": [
              "type"
            ],
            "on_conflict": "replace",
            "states": [
              "available",
              "active",
              "retryable",
              "scheduled"
            ]
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available",
          "$.job.args[0].version": 2
        }
      }
    },
    {
      "id": "step-3",
      "description": "Verify the original job was cancelled",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "cancelled"
        }
      }
    },
    {
      "id": "step-4",
      "description": "Verify the new replacement job is available",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-2.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-2.response.body.job.id}}",
          "$.job.state": "available",
          "$.job.args[0].version": 2
        }
      }
    }
  ]
}
