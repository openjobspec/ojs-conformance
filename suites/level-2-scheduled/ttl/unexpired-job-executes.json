{
  "test_id": "L2-TTL-002",
  "level": 2,
  "category": "ttl",
  "name": "unexpired-job-executes",
  "description": "A job enqueued with expires_at set far in the future MUST remain available for normal execution. Workers MUST be able to fetch and acknowledge the job before the TTL expires.",
  "spec_ref": "ojs-core#section-5.2",
  "tags": [
    "level-2",
    "ttl",
    "happy-path",
    "execute"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "ttl.test.unexpired_executes",
        "args": [
          {
            "action": "execute_before_expiry"
          }
        ],
        "options": {
          "queue": "ttl-test",
          "expires_at": "2099-12-31T23:59:59Z"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available",
          "$.job.expires_at": "2099-12-31T23:59:59Z"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "ttl-test"
        ],
        "worker_id": "worker-ttl-2"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].state": "active",
          "$.jobs[0].attempt": 0
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "ack",
      "path": "/ojs/v1/workers/ack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-ttl-2",
        "result": {
          "status": "processed_before_ttl"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "completed",
          "$.job.completed_at": "string:datetime"
        }
      }
    }
  ]
}
