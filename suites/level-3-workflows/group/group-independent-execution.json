{
  "test_id": "L3-GRP-004",
  "level": 3,
  "category": "group",
  "name": "group-independent-execution",
  "description": "In a group workflow, each job MUST execute independently. If one job fails, the sibling jobs MUST NOT be affected and MUST continue to be fetchable and completable. Failure of one does NOT cancel or block the others.",
  "spec_ref": "ojs-workflows#section-5",
  "tags": [
    "level-3",
    "group",
    "independence",
    "isolation"
  ],
  "steps": [
    {
      "id": "step-1",
      "description": "Create a group workflow with 3 jobs",
      "action": "POST",
      "intent": "create-workflow",
      "path": "/ojs/v1/workflows",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "group",
        "name": "independent-group-test",
        "jobs": [
          {
            "type": "group.test.independent_a",
            "args": [
              {
                "task": "a"
              }
            ],
            "options": {
              "queue": "group-indep-test"
            }
          },
          {
            "type": "group.test.independent_b",
            "args": [
              {
                "task": "b_will_fail"
              }
            ],
            "options": {
              "queue": "group-indep-test",
              "retry_policy": {
                "max_attempts": 1
              }
            }
          },
          {
            "type": "group.test.independent_c",
            "args": [
              {
                "task": "c"
              }
            ],
            "options": {
              "queue": "group-indep-test"
            }
          }
        ]
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.workflow.id": "string:uuidv7",
          "$.workflow.type": "group",
          "$.workflow.state": "running",
          "$.workflow.jobs_total": 3
        }
      }
    },
    {
      "id": "step-2",
      "description": "Fetch first job",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "group-indep-test"
        ],
        "worker_id": "worker-indep-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].state": "active"
        }
      }
    },
    {
      "id": "step-3",
      "description": "NACK first fetched job to trigger failure",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-2.response.body.jobs[0].id}}",
        "worker_id": "worker-indep-1",
        "error": {
          "type": "FatalError",
          "message": "Permanent failure to test sibling independence"
        }
      },
      "assertions": {
        "status": 200
      }
    },
    {
      "id": "step-4",
      "description": "Fetch next job - should still be available despite sibling failure",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "group-indep-test"
        ],
        "worker_id": "worker-indep-2"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].state": "active"
        }
      }
    },
    {
      "id": "step-5",
      "description": "Complete the second fetched job successfully",
      "action": "POST",
      "intent": "ack",
      "path": "/ojs/v1/workers/ack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-4.response.body.jobs[0].id}}",
        "worker_id": "worker-indep-2",
        "result": {
          "status": "done_despite_sibling_failure"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "completed"
        }
      }
    },
    {
      "id": "step-6",
      "description": "Fetch the third job - should also still be available",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "group-indep-test"
        ],
        "worker_id": "worker-indep-3"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].state": "active"
        }
      }
    },
    {
      "id": "step-7",
      "description": "Complete the third job successfully",
      "action": "POST",
      "intent": "ack",
      "path": "/ojs/v1/workers/ack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-6.response.body.jobs[0].id}}",
        "worker_id": "worker-indep-3",
        "result": {
          "status": "done_despite_sibling_failure"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "completed"
        }
      }
    }
  ]
}
