{
  "test_id": "L3-GRP-001",
  "level": 3,
  "category": "group",
  "name": "group-parallel-execution",
  "description": "A group workflow with 3 jobs MUST enqueue all of them immediately for parallel execution. All 3 jobs MUST be fetchable without waiting for any to complete first, confirming parallel dispatch behavior.",
  "spec_ref": "ojs-workflows#section-5",
  "tags": [
    "level-3",
    "group",
    "parallel",
    "enqueue"
  ],
  "steps": [
    {
      "id": "step-1",
      "description": "Create a group workflow with 3 parallel jobs",
      "action": "POST",
      "intent": "create-workflow",
      "path": "/ojs/v1/workflows",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "group",
        "name": "parallel-group-test",
        "jobs": [
          {
            "type": "group.test.task_alpha",
            "args": [
              {
                "task": "alpha",
                "parallel": true
              }
            ],
            "options": {
              "queue": "group-parallel-test"
            }
          },
          {
            "type": "group.test.task_beta",
            "args": [
              {
                "task": "beta",
                "parallel": true
              }
            ],
            "options": {
              "queue": "group-parallel-test"
            }
          },
          {
            "type": "group.test.task_gamma",
            "args": [
              {
                "task": "gamma",
                "parallel": true
              }
            ],
            "options": {
              "queue": "group-parallel-test"
            }
          }
        ]
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.workflow.id": "string:uuidv7",
          "$.workflow.type": "group",
          "$.workflow.state": "running",
          "$.workflow.jobs_total": 3,
          "$.workflow.jobs_completed": 0
        }
      }
    },
    {
      "id": "step-2",
      "description": "Fetch first job from the group",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "group-parallel-test"
        ],
        "worker_id": "worker-group-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].state": "active"
        }
      }
    },
    {
      "id": "step-3",
      "description": "Fetch second job from the group - should be immediately available",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "group-parallel-test"
        ],
        "worker_id": "worker-group-2"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].state": "active"
        }
      }
    },
    {
      "id": "step-4",
      "description": "Fetch third job from the group - should also be immediately available",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "group-parallel-test"
        ],
        "worker_id": "worker-group-3"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].state": "active"
        }
      }
    }
  ]
}
