{
  "test_id": "EXT-MT-001",
  "level": 0,
  "category": "ext-multi-tenancy",
  "name": "multi-tenancy-tenant-header",
  "description": "Enqueue a job with the X-OJS-Tenant header set. Verify the server assigns the tenant_id from the header into the job meta and preserves it in the stored envelope.",
  "spec_ref": "ojs-multi-tenancy#section-3",
  "tags": ["extension", "multi-tenancy", "tenant-header", "happy-path"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json",
        "X-OJS-Tenant": "tenant-acme-corp"
      },
      "body": {
        "type": "test.tenant",
        "args": [
          {
            "action": "tenant-header-test"
          }
        ],
        "options": {
          "queue": "conformance-tenant-header"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": { "$exists": true },
          "$.job.state": "available",
          "$.job.meta.tenant_id": "tenant-acme-corp"
        }
      }
    },
    {
      "id": "step-2",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json",
        "X-OJS-Tenant": "tenant-acme-corp"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.meta.tenant_id": "tenant-acme-corp"
        }
      }
    }
  ]
}
