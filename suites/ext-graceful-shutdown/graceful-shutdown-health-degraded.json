{
  "test_id": "EXT-GS-002",
  "level": 0,
  "category": "ext-graceful-shutdown",
  "name": "graceful-shutdown-health-degraded",
  "description": "After a worker sends a drain heartbeat, the health endpoint SHOULD reflect degraded status. Send a drain beat then query health to verify the server reports degraded or draining status with 503.",
  "spec_ref": "ojs-graceful-shutdown#section-4",
  "tags": ["extension", "graceful-shutdown", "health", "degraded"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "beat",
      "path": "/ojs/v1/workers/beat",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "worker_id": "test-worker-gs-2",
        "state": "drain",
        "active_jobs": 0,
        "shutdown": true
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.acknowledged": true
        }
      }
    },
    {
      "id": "step-2",
      "action": "GET",
      "intent": "health",
      "path": "/ojs/v1/workers/test-worker-gs-2/health",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": {
          "$in": [200, 503]
        },
        "body": {
          "$.state": {
            "$in": ["drain", "draining", "shutting_down"]
          }
        }
      }
    }
  ]
}
