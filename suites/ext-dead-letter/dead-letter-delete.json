{
  "test_id": "EXT-DLQ-004",
  "level": "ext",
  "category": "dead-letter",
  "name": "dead-letter-delete",
  "description": "DELETE /ojs/v1/admin/dead-letter/{id} MUST permanently remove the job from the DLQ.",
  "spec_ref": "ojs-dead-letter#section-10",
  "tags": [
    "ext",
    "dead-letter",
    "delete"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue a job that will be discarded",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "test.dlq.delete",
        "args": [
          {
            "n": 1
          }
        ],
        "options": {
          "queue": "dlq-delete-test",
          "retry": {
            "max_attempts": 1,
            "on_exhaustion": "dead_letter"
          }
        }
      },
      "assertions": {
        "status": 201
      },
      "capture": {
        "job_id": "$.job.id"
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch the job",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "dlq-delete-test"
        ],
        "count": 1,
        "worker_id": "test-dlq-delete-worker"
      },
      "assertions": {
        "status": 200
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "fail the job",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{job_id}}",
        "error": {
          "code": "handler_error",
          "message": "deliberate failure",
          "retryable": true
        }
      },
      "assertions": {
        "status": 200
      }
    },
    {
      "id": "step-4",
      "action": "DELETE",
      "intent": "delete the dead letter job",
      "path": "/ojs/v1/admin/dead-letter/{{job_id}}",
      "assertions": {
        "status": 204
      }
    }
  ]
}
