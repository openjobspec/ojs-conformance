{
  "test_id": "EXT-WHK-003",
  "level": 0,
  "category": "ext-webhooks",
  "name": "webhooks-delete-subscription",
  "description": "Create a webhook subscription, then DELETE /ojs/v1/webhooks/subscriptions/{id} to remove it. Verify the server returns 200 or 204 confirming deletion.",
  "spec_ref": "ojs-webhooks#section-5",
  "tags": ["extension", "webhooks", "delete", "lifecycle"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "create-subscription",
      "path": "/ojs/v1/webhooks/subscriptions",
      "headers": {
        "Content-Type": "application/openjobspec+json",
        "Accept": "application/openjobspec+json"
      },
      "body": {
        "url": "https://example.com/webhooks/delete-test",
        "events": ["job.completed"],
        "secret": "whk_test_secret_003"
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.subscription.id": { "$exists": true }
        }
      }
    },
    {
      "id": "step-2",
      "action": "DELETE",
      "intent": "delete-subscription",
      "path": "/ojs/v1/webhooks/subscriptions/{{steps.step-1.response.body.subscription.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": {
          "$in": [200, 204]
        }
      }
    }
  ]
}
