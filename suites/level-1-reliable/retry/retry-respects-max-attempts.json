{
  "test_id": "L1-RTR-002",
  "level": 1,
  "category": "retry",
  "name": "retry-respects-max-attempts",
  "description": "A job with max_attempts=3 MUST be discarded after the third failure. The system MUST NOT allow further retries once max_attempts is reached.",
  "spec_ref": "ojs-retry#section-2",
  "tags": [
    "level-1",
    "retry",
    "max-attempts"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "retry.test.max-attempts",
        "args": [
          {
            "action": "always_fail"
          }
        ],
        "options": {
          "queue": "retry-test",
          "retry_policy": {
            "max_attempts": 3,
            "initial_interval": "PT1S",
            "backoff_coefficient": 1.0,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "discard"
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-max-attempts-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 1
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-max-attempts-1",
        "error": {
          "type": "TransientError",
          "message": "Failure attempt 1 of 3"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 1
        }
      }
    },
    {
      "id": "step-4",
      "delay_ms": 1200,
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-max-attempts-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 2
        }
      }
    },
    {
      "id": "step-5",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-max-attempts-1",
        "error": {
          "type": "TransientError",
          "message": "Failure attempt 2 of 3"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 2
        }
      }
    },
    {
      "id": "step-6",
      "delay_ms": 1200,
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-max-attempts-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 3
        }
      }
    },
    {
      "id": "step-7",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-max-attempts-1",
        "error": {
          "type": "TransientError",
          "message": "Failure attempt 3 of 3 - should exhaust retries"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "discarded",
          "$.job.attempt": 3
        }
      }
    },
    {
      "id": "step-8",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "discarded",
          "$.job.attempt": 3
        }
      }
    }
  ]
}
