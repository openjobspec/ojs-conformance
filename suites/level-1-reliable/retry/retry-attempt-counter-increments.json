{
  "test_id": "L1-RTR-013",
  "level": 1,
  "category": "retry",
  "name": "retry-attempt-counter-increments",
  "description": "Each time a job fails and is retried, the attempt counter MUST increment by 1. The first attempt is 1, and after each failure the attempt number MUST reflect the current attempt number (1-indexed).",
  "spec_ref": "ojs-retry#section-10",
  "tags": [
    "level-1",
    "retry",
    "attempt-counter"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "retry.test.attempt-counter",
        "args": [
          {
            "action": "fail_three_times"
          }
        ],
        "options": {
          "queue": "retry-test",
          "retry": {
            "max_attempts": 5,
            "initial_interval": "PT1S",
            "backoff_coefficient": 1.0,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "discard"
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-counter-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].state": "active",
          "$.jobs[0].attempt": 1
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-counter-1",
        "error": {
          "code": "handler_error",
          "message": "Attempt 0 failed",
          "retryable": true
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.attempt": 1
        }
      }
    },
    {
      "id": "step-4",
      "delay_ms": 1200,
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-counter-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].state": "active",
          "$.jobs[0].attempt": 2
        }
      }
    },
    {
      "id": "step-5",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-counter-1",
        "error": {
          "code": "handler_error",
          "message": "Attempt 1 failed",
          "retryable": true
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.attempt": 2
        }
      }
    },
    {
      "id": "step-6",
      "delay_ms": 1200,
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-counter-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].state": "active",
          "$.jobs[0].attempt": 3
        }
      }
    },
    {
      "id": "step-7",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-counter-1",
        "error": {
          "code": "handler_error",
          "message": "Attempt 2 failed",
          "retryable": true
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.attempt": 3
        }
      }
    },
    {
      "id": "step-8",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.attempt": 3
        }
      }
    }
  ]
}
