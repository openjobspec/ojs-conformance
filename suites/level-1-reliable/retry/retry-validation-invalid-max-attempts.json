{
  "test_id": "L1-RTR-011",
  "level": 1,
  "category": "retry",
  "name": "retry-validation-invalid-max-attempts",
  "description": "Enqueuing a job with max_attempts=-1 MUST be rejected by the server. The server MUST return an HTTP 422 (Unprocessable Entity) error indicating the invalid retry policy.",
  "spec_ref": "ojs-retry#section-11",
  "tags": ["level-1", "retry", "validation", "negative-test"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "retry.test.invalid-max-attempts",
        "args": [{"action": "should_be_rejected"}],
        "options": {
          "queue": "retry-test",
          "retry_policy": {
            "max_attempts": -1,
            "initial_interval": "PT1S",
            "backoff_coefficient": 2.0,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "discard"
          }
        }
      },
      "assertions": {
        "status": 422,
        "body": {
          "$.error.type": "validation_error",
          "$.error.message": "string:contains:max_attempts"
        }
      }
    }
  ]
}