{
  "test_id": "L1-RTR-012",
  "level": 1,
  "category": "retry",
  "name": "retry-validation-invalid-coefficient",
  "description": "Enqueuing a job with backoff_coefficient=0.5 (less than 1.0) MUST be rejected by the server. The backoff coefficient MUST be >= 1.0. The server MUST return an HTTP 422 (Unprocessable Entity) error.",
  "spec_ref": "ojs-retry#section-11",
  "tags": [
    "level-1",
    "retry",
    "validation",
    "negative-test"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "retry.test.invalid-coefficient",
        "args": [
          {
            "action": "should_be_rejected"
          }
        ],
        "options": {
          "queue": "retry-test",
          "retry": {
            "max_attempts": 3,
            "initial_interval": "PT1S",
            "backoff_coefficient": 0.5,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "discard"
          }
        }
      },
      "assertions": {
        "status": 422,
        "body": {
          "$.error.type": "validation_error",
          "$.error.message": "string:contains:backoff_coefficient"
        }
      }
    }
  ]
}
