{
  "test_id": "L1-RTR-009",
  "level": 1,
  "category": "retry",
  "name": "retry-linear-backoff",
  "description": "A job configured with linear backoff (backoff_coefficient=1.0, initial_interval=PT1S with additive increment) MUST produce linearly increasing retry delays: ~1s, ~2s, ~3s.",
  "spec_ref": "ojs-retry#section-3",
  "tags": ["level-1", "retry", "linear-backoff"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "retry.test.linear-backoff",
        "args": [{"action": "always_fail"}],
        "options": {
          "queue": "retry-test",
          "retry_policy": {
            "max_attempts": 5,
            "initial_interval": "PT1S",
            "backoff_coefficient": 1.0,
            "backoff_strategy": "linear",
            "max_interval": "PT30S",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "discard"
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["retry-test"],
        "worker_id": "worker-linear-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-linear-1",
        "error": {
          "type": "TransientError",
          "message": "First failure - expect 1s delay"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 1,
          "$.job.retry_delay_ms": "~1000"
        }
      }
    },
    {
      "id": "step-4",
      "delay_ms": 1200,
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["retry-test"],
        "worker_id": "worker-linear-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 1
        }
      }
    },
    {
      "id": "step-5",
      "action": "POST",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-linear-1",
        "error": {
          "type": "TransientError",
          "message": "Second failure - expect 2s delay"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 2,
          "$.job.retry_delay_ms": "~2000"
        }
      }
    },
    {
      "id": "step-6",
      "delay_ms": 2200,
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["retry-test"],
        "worker_id": "worker-linear-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 2
        }
      }
    },
    {
      "id": "step-7",
      "action": "POST",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-linear-1",
        "error": {
          "type": "TransientError",
          "message": "Third failure - expect 3s delay"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 3,
          "$.job.retry_delay_ms": "~3000"
        }
      }
    }
  ]
}