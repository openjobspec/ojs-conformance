{
  "test_id": "L1-RTR-010",
  "level": 1,
  "category": "retry",
  "name": "retry-constant-backoff",
  "description": "A job configured with constant backoff (backoff_coefficient=1.0, no additive strategy) MUST retry with the same delay each time. Each retry interval MUST equal the initial_interval.",
  "spec_ref": "ojs-retry#section-3",
  "tags": [
    "level-1",
    "retry",
    "constant-backoff"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "retry.test.constant-backoff",
        "args": [
          {
            "action": "always_fail"
          }
        ],
        "options": {
          "queue": "retry-test",
          "retry_policy": {
            "max_attempts": 4,
            "initial_interval": "PT1S",
            "backoff_coefficient": 1.0,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "discard"
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-constant-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-constant-1",
        "error": {
          "type": "TransientError",
          "message": "First failure - expect 1s constant delay"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 1,
          "$.job.retry_delay_ms": "~1000"
        }
      }
    },
    {
      "id": "step-4",
      "delay_ms": 1200,
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-constant-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 1
        }
      }
    },
    {
      "id": "step-5",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-constant-1",
        "error": {
          "type": "TransientError",
          "message": "Second failure - expect same 1s constant delay"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 2,
          "$.job.retry_delay_ms": "~1000"
        }
      }
    },
    {
      "id": "step-6",
      "delay_ms": 1200,
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-constant-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 2
        }
      }
    },
    {
      "id": "step-7",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-constant-1",
        "error": {
          "type": "TransientError",
          "message": "Third failure - expect same 1s constant delay again"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 3,
          "$.job.retry_delay_ms": "~1000"
        }
      }
    }
  ]
}
