{
  "test_id": "L1-RTR-004",
  "level": 1,
  "category": "retry",
  "name": "retry-non-retryable-error",
  "description": "A job with non_retryable_errors=['FatalError'] MUST be immediately discarded when it fails with error type 'FatalError'. No retry attempts MUST be made.",
  "spec_ref": "ojs-retry#section-6",
  "tags": [
    "level-1",
    "retry",
    "non-retryable"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "retry.test.non-retryable",
        "args": [
          {
            "action": "fail_with_fatal"
          }
        ],
        "options": {
          "queue": "retry-test",
          "retry": {
            "max_attempts": 5,
            "initial_interval": "PT1S",
            "backoff_coefficient": 2.0,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [
              "FatalError"
            ],
            "on_exhaustion": "discard"
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-non-retryable-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].attempt": 1
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-non-retryable-1",
        "error": {
          "code": "handler_error",
          "message": "Non-retryable failure - should not retry",
          "retryable": false,
          "details": {
            "error_class": "FatalError"
          }
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.state": "discarded",
          "$.attempt": 1
        }
      }
    },
    {
      "id": "step-4",
      "action": "GET",
      "intent": "get-job",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "discarded",
          "$.job.attempt": 1
        }
      }
    }
  ]
}
