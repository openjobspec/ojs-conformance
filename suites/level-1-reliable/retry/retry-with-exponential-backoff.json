{
  "test_id": "L1-RTR-001",
  "level": 1,
  "category": "retry",
  "name": "retry-with-exponential-backoff",
  "description": "A job configured with exponential backoff (coefficient=2.0, initial_interval=PT1S) MUST increase retry delays exponentially. After the first failure the retry delay MUST be ~1s, and after the second failure the delay MUST be ~2s.",
  "spec_ref": "ojs-retry#section-3",
  "tags": [
    "level-1",
    "retry",
    "exponential-backoff"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "retry.test.exponential-backoff",
        "args": [
          {
            "action": "fail_then_succeed"
          }
        ],
        "options": {
          "queue": "retry-test",
          "retry_policy": {
            "max_attempts": 4,
            "initial_interval": "PT1S",
            "backoff_coefficient": 2.0,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "discard"
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-exp-backoff-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "active",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-exp-backoff-1",
        "error": {
          "type": "TransientError",
          "message": "First failure to trigger exponential backoff"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 1
        }
      }
    },
    {
      "id": "step-4",
      "description": "Wait ~1s for the first retry interval (initial_interval=PT1S)",
      "delay_ms": 1200,
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-exp-backoff-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "active",
          "$.job.attempt": 1,
          "$.job.retry_delay_ms": "~1000"
        }
      }
    },
    {
      "id": "step-5",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-exp-backoff-1",
        "error": {
          "type": "TransientError",
          "message": "Second failure to trigger 2x backoff"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "retryable",
          "$.job.attempt": 2
        }
      }
    },
    {
      "id": "step-6",
      "description": "Wait ~2s for the second retry interval (1s * 2.0 = 2s)",
      "delay_ms": 2500,
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "retry-test"
        ],
        "worker_id": "worker-exp-backoff-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "active",
          "$.job.attempt": 2,
          "$.job.retry_delay_ms": "~2000"
        }
      }
    }
  ]
}
