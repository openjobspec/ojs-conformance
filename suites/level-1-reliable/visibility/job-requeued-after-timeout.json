{
  "test_id": "L1-VIS-001",
  "level": 1,
  "category": "visibility",
  "name": "job-requeued-after-timeout",
  "description": "When a worker fetches a job and neither ACKs nor NACKs it before the visibility timeout expires, the system MUST automatically return the job to the 'available' state. Another worker MUST then be able to fetch and process the job.",
  "spec_ref": "ojs-worker-protocol#section-6",
  "tags": ["level-1", "visibility", "timeout", "requeue"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "visibility.test.timeout-requeue",
        "args": [{"action": "simulate_abandoned_job"}],
        "options": {
          "queue": "visibility-test",
          "visibility_timeout": "PT3S"
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["visibility-test"],
        "worker_id": "worker-vis-abandoned-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "active"
        }
      }
    },
    {
      "id": "step-3",
      "action": "GET",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "active"
        }
      }
    },
    {
      "id": "step-4",
      "description": "Wait for visibility timeout to expire (3s timeout + 1s buffer)",
      "delay_ms": 4000,
      "action": "GET",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-5",
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["visibility-test"],
        "worker_id": "worker-vis-recovered-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "active"
        }
      }
    },
    {
      "id": "step-6",
      "action": "POST",
      "path": "/ojs/v1/workers/ack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-vis-recovered-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "completed"
        }
      }
    }
  ]
}