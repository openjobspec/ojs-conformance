{
  "test_id": "L1-DLQ-002",
  "level": 1,
  "category": "dead-letter",
  "name": "dead-letter-manual-retry",
  "description": "A job in the dead letter queue MUST be retryable via the DLQ retry endpoint. After a manual retry, the job state MUST transition back to 'available' and its attempt counter MUST be reset to 0. The job MUST be fetchable by workers again.",
  "spec_ref": "ojs-core#section-6.2",
  "tags": ["level-1", "dead-letter", "manual-retry"],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "dlq.test.manual-retry",
        "args": [{"action": "fail_then_succeed"}],
        "options": {
          "queue": "dlq-test",
          "retry_policy": {
            "max_attempts": 1,
            "initial_interval": "PT1S",
            "backoff_coefficient": 1.0,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "dead_letter"
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["dlq-test"],
        "worker_id": "worker-dlq-retry-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-dlq-retry-1",
        "error": {
          "type": "ProcessingError",
          "message": "Temporary failure to land in DLQ"
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "discarded"
        }
      }
    },
    {
      "id": "step-4",
      "action": "POST",
      "path": "/ojs/v1/dead-letter/{{steps.step-1.response.body.job.id}}/retry",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {},
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "available",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-5",
      "action": "GET",
      "path": "/ojs/v1/jobs/{{steps.step-1.response.body.job.id}}",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "available",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-6",
      "action": "POST",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": ["dlq-test"],
        "worker_id": "worker-dlq-retry-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.id": "{{steps.step-1.response.body.job.id}}",
          "$.job.state": "active",
          "$.job.attempt": 0
        }
      }
    },
    {
      "id": "step-7",
      "action": "POST",
      "path": "/ojs/v1/workers/ack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-dlq-retry-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.job.state": "completed"
        }
      }
    }
  ]
}