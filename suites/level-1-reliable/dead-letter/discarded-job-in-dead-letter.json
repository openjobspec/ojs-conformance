{
  "test_id": "L1-DLQ-001",
  "level": 1,
  "category": "dead-letter",
  "name": "discarded-job-in-dead-letter",
  "description": "When a job exhausts all retry attempts with on_exhaustion='dead_letter', the job MUST appear in the dead letter queue listing. The DLQ entry MUST contain the full job payload, error history, and metadata.",
  "spec_ref": "ojs-core#section-6.1",
  "tags": [
    "level-1",
    "dead-letter",
    "exhaustion"
  ],
  "steps": [
    {
      "id": "step-1",
      "action": "POST",
      "intent": "enqueue",
      "path": "/ojs/v1/jobs",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "type": "dlq.test.discarded-in-dlq",
        "args": [
          {
            "action": "always_fail"
          }
        ],
        "options": {
          "queue": "dlq-test",
          "retry": {
            "max_attempts": 1,
            "initial_interval": "PT1S",
            "backoff_coefficient": 1.0,
            "max_interval": "PT5M",
            "jitter": false,
            "non_retryable_errors": [],
            "on_exhaustion": "dead_letter"
          }
        }
      },
      "assertions": {
        "status": 201,
        "body": {
          "$.job.id": "string:uuidv7",
          "$.job.state": "available"
        }
      }
    },
    {
      "id": "step-2",
      "action": "POST",
      "intent": "fetch",
      "path": "/ojs/v1/workers/fetch",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "queues": [
          "dlq-test"
        ],
        "worker_id": "worker-dlq-discard-1"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs[0].id": "{{steps.step-1.response.body.job.id}}",
          "$.jobs[0].attempt": 1
        }
      }
    },
    {
      "id": "step-3",
      "action": "POST",
      "intent": "nack",
      "path": "/ojs/v1/workers/nack",
      "headers": {
        "Content-Type": "application/openjobspec+json"
      },
      "body": {
        "job_id": "{{steps.step-1.response.body.job.id}}",
        "worker_id": "worker-dlq-discard-1",
        "error": {
          "code": "handler_error",
          "message": "Failed to process - exhaust retries to DLQ",
          "retryable": true
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.state": "discarded",
          "$.attempt": 1
        }
      }
    },
    {
      "id": "step-4",
      "action": "GET",
      "intent": "list-dead-letter",
      "path": "/ojs/v1/dead-letter",
      "headers": {
        "Accept": "application/openjobspec+json"
      },
      "assertions": {
        "status": 200,
        "body": {
          "$.jobs": "array:min_length:1",
          "$.jobs[?(@.id=='{{steps.step-1.response.body.job.id}}')]": "exists",
          "$.jobs[?(@.id=='{{steps.step-1.response.body.job.id}}')].state": "discarded",
          "$.jobs[?(@.id=='{{steps.step-1.response.body.job.id}}')].type": "dlq.test.discarded-in-dlq",
          "$.jobs[?(@.id=='{{steps.step-1.response.body.job.id}}')].errors": "array:length:1"
        }
      }
    }
  ]
}
